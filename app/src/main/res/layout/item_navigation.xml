<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@color/loginGreen">

    <LinearLayout
        android:layout_width="@dimen/w250dp"
        android:layout_height="@dimen/w250dp"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/w150dp"
            android:layout_height="@dimen/w150dp"
            android:src="@mipmap/qq_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/w30dp"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/w20dp"
            android:text="@string/app_name"/>
    </LinearLayout>

</LinearLayout>