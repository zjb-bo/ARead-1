<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/loginGreen">

    <LinearLayout
        android:layout_width="@dimen/w200dp"
        android:layout_height="@dimen/w250dp"
        android:orientation="vertical"
        android:gravity="center">

        <com.aread.cn.view.MyCircleImage
            android:id="@+id/user_img"
            android:layout_width="@dimen/w120dp"
            android:layout_height="@dimen/w120dp"
            android:src="@mipmap/qq_icon"
            />
        <TextView
            android:id="@+id/user_nackName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/w24dp"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/w20dp"
            android:text="@string/app_name"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:padding="@dimen/w10dp">
        <TextView
            android:id="@+id/user_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/w28dp"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/w20dp"
            android:text="@string/sign"/>
    </LinearLayout>

</LinearLayout>