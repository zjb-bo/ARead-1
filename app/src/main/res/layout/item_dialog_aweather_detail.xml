<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/w500dp"
    android:layout_height="@dimen/w478dp">


    <LinearLayout
        android:layout_width="@dimen/w500dp"
        android:layout_height="@dimen/w478dp"
        android:background="@mipmap/weather_detail_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/w92dp"
            android:layout_marginTop="@dimen/w86dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNowTemperature"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/w40dp"
                android:gravity="center"
                android:text="11"
                android:textColor="@color/white"
                android:textSize="@dimen/w80dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/w24dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/wheather_c" />


                <TextView
                    android:id="@+id/tvNowCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:text="北京市"
                    android:textColor="@color/white"
                    android:textSize="@dimen/w28dp" />

            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvNowDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w46dp"
            android:layout_marginTop="@dimen/w38dp"
            android:gravity="center"
            android:text="2016年11月25日 星期五"
            android:textColor="@color/white"
            android:textSize="@dimen/w28dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w46dp"
            android:layout_marginTop="@dimen/w30dp">

            <TextView
                android:id="@+id/tvNowSky"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="晴"
                android:textColor="@color/white"
                android:textSize="@dimen/w24dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/w28dp"
                android:src="@mipmap/wheather_window" />

            <TextView
                android:id="@+id/tvNowWind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w5dp"
                android:gravity="center"
                android:text="西风"
                android:textColor="@color/white"
                android:textSize="@dimen/w24dp" />

            <TextView
                android:id="@+id/tvNowContaminated"
                android:layout_width="@dimen/w114dp"
                android:layout_height="@dimen/w36dp"
                android:layout_marginLeft="@dimen/w20dp"
                android:background="@drawable/wheather_wuran_bg"
                android:gravity="center"
                android:text="轻度污染"
                android:textColor="@color/white"
                android:textSize="@dimen/w24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w25dp"
                android:gravity="center"
                android:text="PM2.5"
                android:textColor="#fff403"
                android:textSize="@dimen/w24dp" />

            <TextView
                android:id="@+id/tvNowPM25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w25dp"
                android:gravity="center"
                android:text="105"
                android:textColor="#fff403"
                android:textSize="@dimen/w24dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/w134dp"
            android:layout_marginLeft="@dimen/w30dp"
            android:layout_marginRight="@dimen/w30dp">

            <LinearLayout
                android:layout_width="@dimen/w120dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvData1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/w10dp"
                    android:gravity="center"
                    android:text="今天"
                    android:textColor="@color/white"
                    android:textSize="@dimen/w24dp" />

                <TextView
                    android:id="@+id/tvTemperature1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/w5dp"
                    android:gravity="center"
                    android:text="1C./20C."
                    android:textColor="@color/white"
                    android:textSize="@dimen/w24dp" />

                <ImageView
                    android:id="@+id/ivWeather1"
                    android:layout_width="@dimen/w50dp"
                    android:layout_height="@dimen/w50dp"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="@dimen/w120dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvData2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/w10dp"
                    android:gravity="center"
                    android:text="明天"
                    android:textColor="@color/white"
                    android:textSize="@dimen/w24dp" />

                <TextView
                    android:id="@+id/tvTemperature2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/w5dp"
                    android:gravity="center"
                    android:text="1C./20C."
                    android:textColor="@color/white"
                    android:textSize="@dimen/w24dp" />

                <ImageView
                    android:id="@+id/ivWeather2"
                    android:layout_width="@dimen/w50dp"
                    android:layout_height="@dimen/w50dp"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="@dimen/w120dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvData3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/w10dp"
                    android:gravity="center"
                    android:text="后天"
                    android:textColor="@color/white"
                    android:textSize="@dimen/w24dp" />

                <TextView
                    android:id="@+id/tvTemperature3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/w5dp"
                    android:gravity="center"
                    android:text="1C./20C."
                    android:textColor="@color/white"
                    android:textSize="@dimen/w24dp" />

                <ImageView
                    android:id="@+id/ivWeather3"
                    android:layout_width="@dimen/w50dp"
                    android:layout_height="@dimen/w50dp"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/now_weather_pic"
        android:layout_width="@dimen/w150dp"
        android:layout_height="@dimen/w150dp"
        android:layout_marginTop="@dimen/w60dp"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/w20dp"
        />

</FrameLayout>
