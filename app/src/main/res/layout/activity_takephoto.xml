<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        


        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/takePhoto"
            android:layout_width="@dimen/w120dp"
            android:layout_height="@dimen/w120dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/btn_photo_share_gram"
            android:layout_marginBottom="@dimen/w30dp"/>

        <ImageButton
            android:id="@+id/switchCamera"
            android:layout_width="@dimen/w80dp"
            android:layout_height="@dimen/w80dp"
            android:background="@mipmap/btn_photo_share_gram_small"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/w10dp"/>

        <ImageView
            android:id="@+id/flashLed"
            android:layout_width="@dimen/w80dp"
            android:layout_height="@dimen/w80dp"
            android:src="@mipmap/qq_icon"
            android:layout_margin="@dimen/w10dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/w100dp"
            android:paddingLeft="@dimen/w90dp"
            android:paddingTop="@dimen/w10dp"
            android:paddingBottom="@dimen/w10dp"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:id="@+id/flashLed_ll"
                android:layout_width="@dimen/w300dp"
                android:layout_height="match_parent"
                android:background="@color/loginGreen"
                android:visibility="invisible">
                <TextView
                    android:id="@+id/auto"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/w26dp"
                    android:text="自动"/>
                <TextView
                    android:id="@+id/open"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/w26dp"
                    android:text="打开"/>
                <TextView
                    android:id="@+id/close"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/w26dp"
                    android:text="关闭"/>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</layout>

