<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/takePhoto"
            android:layout_width="@dimen/w120dp"
            android:layout_height="@dimen/w120dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/btn_photo_share_gram"
            android:layout_marginBottom="@dimen/w30dp"/>

        <ImageButton
            android:id="@+id/switchCamera"
            android:layout_width="@dimen/w80dp"
            android:layout_height="@dimen/w80dp"
            android:background="@mipmap/btn_photo_share_gram_small"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/w20dp"/>

    </RelativeLayout>

</layout>

