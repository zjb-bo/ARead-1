<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/w200dp"
    android:minHeight="@dimen/w200dp"
    android:layout_margin="@dimen/w16dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/w200dp"
        android:backgroundTint="@color/loginGreen"
        app:cardCornerRadius="@dimen/w10dp"
        app:cardElevation="@dimen/w12dp"
        android:minHeight="@dimen/w200dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/w70dp"
            android:orientation="horizontal"
            android:paddingRight="@dimen/w16dp"
            android:paddingLeft="@dimen/w16dp"
            >

            <TextView
                android:id="@+id/type"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="@dimen/w24dp"
                android:textColor="@color/white"
                android:text="类型>文本"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/creatTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/w24dp"
                android:textColor="@color/white"
                android:text="2017年5月23日 22:17"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <TextView
            android:id="@+id/content"
            android:layout_marginTop="@dimen/w70dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/w130dp"
            android:padding="@dimen/w16dp"
            android:text="@string/welcome"
            android:textSize="@dimen/w28dp"
            android:maxLines="2"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:gravity="center_vertical"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/w1dp"
            android:layout_marginLeft="@dimen/w16dp"
            android:layout_marginRight="@dimen/w16dp"
            android:layout_marginTop="@dimen/w70dp"
            android:background="@color/white"
            />


    </android.support.v7.widget.CardView>

</RelativeLayout>
